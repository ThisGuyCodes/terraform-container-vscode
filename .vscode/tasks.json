{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "init",
            "type": "process",
            "command": "terraform",
            "args": [
                "init",
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
            },
        },
        {
            "label": "plan",
            "type": "process",
            "command": "terraform",
            "args": [
                "plan",
                "-compact-warnings",
                "-detailed-exitcode",
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
            },
            "dependsOn": [
                "init",
            ],
        },
        {
            "label": "validate",
            "type": "shell",
            "runOptions": {
                "reevaluateOnRerun": true,
                "runOn": "folderOpen",
                "instanceLimit": 1,
            },
            "command": "./scripts/terraform_validate.sh",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "dependsOn": [
                "init",
            ],
            "isBackground": true,
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}",
                ],
                "pattern": {
                    "kind": "location",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5,
                    "regexp": "^([^:]+):([^:]+):([^:]+):([^:]+):(.+)$",
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^----BEGIN----$",
                    "endsPattern": "^----END----$",
                }
            }
        }
    ]
}